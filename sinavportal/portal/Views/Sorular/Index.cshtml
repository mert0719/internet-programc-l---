@using portal.Models
@model List<Sorular>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="card">
            <h5 class="card-header">Sorular Tablosu</h5>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Soru</th>
                            <th>Soru Puanı</th>
                            <th>İşlemler</th>

                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Soru</td>
                                <td>@item.SoruPuani</td>
                                <td class="d-flex justify-content-end">
                                    <a href="/Sorular/Sil/@item.Id" class="btn btn-danger m-1">Sil</a>
                                    <a href="/Sorular/Duzenle/@item.Id" class="btn btn-warning m-1">Düzenle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>                
            </div>            
        </div>
        <a class="btn btn-primary mt-4" href="/Sorular/Ekle/">Yeni ekle</a>
    </div>
</div>


